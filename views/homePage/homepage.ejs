<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
      integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
      crossorigin="anonymous"
    />
    <style>
      img::after {
        content: "";
        background: white;
        z-index: 292;
      }
      img {
        opacity: 0.7;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar')%>
    <div style="position: absolute; top: 20%; left: 5%; z-index: 222">
      <h1 style="font-size: 5rem; color: #0a0a0a">Welcome to Coworker.in</h1>
      <h2 id="text"></h2>

      <a href="/workspace"
        ><button class="btn btn-primary">FIND SPACES</button>
      </a>
    </div>
    <div>
      <img
        style="width: 100%; height: 100vh"
        src="https://assets.devx.work/images/blog/wp/10+Best+Coworking+Spaces+in+India+for+Corporates+and+Startups/DevX.jpg"
        alt=""
      />
    </div>

    <%- include('../partials/footer')%>

    <script>
      const textEl = document.getElementById("text");
      const text = ["Connect", "Create", "Work", "Grow"];
      let idx = 1;
      let c = 0;
      let speed = 250;

      writeText();

      function writeText() {
        textEl.innerText = text[c].slice(0, idx);
        idx++;

        if (idx > text[c].length) {
          idx = 1;
          c++;
        }
        if (c > 3) {
          c = 0;
        }
        setTimeout(writeText, speed);
      }
    </script>
  </body>
</html>
