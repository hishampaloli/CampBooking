<% layout('layouts/boilerplate')%>

<h1 class="mb-5" style="text-align: center;" >Find the best spaces from Coworker.in</h1>

<div style="display: flex; flex-direction: column-reverse;">
<% for (let campground of campgrounds){%>
<div class="card mb-3" style=" border-top-left-radius: 30px;" >
    <div style="display: flex;">
        <div class="col-md-4" style="width: 400px;">
            <img class="img-fluid" style="width: 100%; height: 300px; border-top-left-radius: 30px;" alt="" src="<%=campground.image%>">
        </div>
        <div class="col-md-8 p-2">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %> </h5>
                <p class="card-text"><%= campground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location%></small>
                </p>
                <a class="btn btn-primary" href="/workspace/<%=campground._id%>">View <%=campground.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

</div>